import json
print('This program will read a JSON file and check for groups of compatible elements\n'
      'where they have the same color and can fit the interval into one another.')
#command = input('Please choose a file to open:\n'
#                'You can test with input.txt\n')
#file = open(str(command), "r")
red = blue = green = []  # lists needed to be created for later use
file = open('input.json')
d = json.load(file)  # Imports the JSON file into a python string dictionary
for i in range (0 , len(d)) :  # Counts colors
    color = d.get('color')
    print(str(i) + ' ' + d[i]['name'] + ' ' + d[i]['color'])
    if color == 'red' :
        red.append(color)  # Gets the name to later compare min and max
    elif color == 'blue' :
        blue.append(['color'])
    elif color == 'green' :
        green.append(d[i]['color'])
#d.get ("red")
print (red)
print(blue)
print(green)
print (len(d))

file.close( )  # Closes file, finalizing the open command
